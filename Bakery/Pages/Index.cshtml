@page
@model Bakery.Pages.IndexModel

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="fw-light text-center" style="color: #5a5a5a;">Our Products</h1>
<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-3 p-2">
            <div class="card h-100 shadow-sm product-card"
                 style="transition: transform 0.3s ease, box-shadow 0.3s ease; height: 22rem; background-color: #fafafa; border: 1px solid #eaeaea; border-radius: 8px;">
                <img src="/images/products/@product.ImageName" class="card-img-top img-fluid" alt="@product.Name"
                     style="height: 12rem; object-fit: cover; border-bottom: 1px solid #eaeaea;">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title fw-bold mb-2" style="color: #5a5a5a; min-height: 2rem;">@product.Name</h5>
                    <p class="card-text text-muted flex-grow-1" style="overflow: hidden; text-overflow: ellipsis;">@product.Description</p>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="card-text fw-bold" style="color: #5a5a5a;">@(product.Price.ToString("c"))</span>
                        <a class="btn btn-sm" asp-page="/Order" asp-route-id="@product.Id"
                           style="background-color: #8b8b8b; color: white; border: none;">Order Now</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Uniform card height and layout */
    .product-card {
        height: 22rem; /* Fixed card height */
        display: flex;
        flex-direction: column;
    }

        /* Larger image size */
        .product-card img {
            height: 12rem; /* Increased image height */
            object-fit: cover;
            border-bottom: 1px solid #eaeaea;
        }

        /* Card title with a minimum height */
        .product-card .card-title {
            min-height: 2rem; /* Ensures consistent space for the title */
        }

        /* Description truncation for consistency */
        .product-card .card-text {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        /* Card hover effect */
        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
        }

    /* Button hover effect */
    .btn:hover {
        background-color: #6b6b6b !important;
    }
</style>

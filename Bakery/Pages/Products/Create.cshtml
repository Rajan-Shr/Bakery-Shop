@page
@model Bakery.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create Product";
}

<h1 class="mb-4">Create Product</h1>

<h4 class="text-secondary">Enter Product Details</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Product Name -->
            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label"></label>
                <input asp-for="Product.Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <!-- Product Description -->
            <div class="mb-3">
                <label asp-for="Product.Description" class="form-label"></label>
                <textarea asp-for="Product.Description" class="form-control" placeholder="Enter product description" rows="3"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <!-- Product Price -->
            <div class="mb-3">
                <label asp-for="Product.Price" class="form-label"></label>
                <input asp-for="Product.Price" class="form-control" placeholder="Enter product price (e.g., 10.99)" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <!-- Product Image -->
            <div class="mb-3">
                <label asp-for="ProductImage" class="form-label"></label>
                <input asp-for="ProductImage" class="form-control" type="file" accept=".jpg,.png" />
                <small class="text-muted">Supported formats: .jpg, .png</small>
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-between">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-secondary" asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}